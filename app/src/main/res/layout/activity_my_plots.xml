<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngobiro.biroproperties.activities.MyPlotsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/lightpink"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/logged_in_txtView"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/instructions_textView"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content"
            android:text="Manage your Plots by adding,deactivating and removing" />

        <Button
            android:id="@+id/active_plots_btn"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Active Plots" />

        <Button
            android:id="@+id/inactive_plots_btn"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Inactive Plots" />

        <Button
            android:id="@+id/manage_callback_requests_btn"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage CallBack Requests" />

        <Button
            android:id="@+id/manage_locations_btn"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Manage  Locations" />
        <Button
            android:id="@+id/manage_users_btn"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Manage  Users" />
        <Button
            android:id="@+id/view_plot_statistcs_btn"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="View Plot Statistics" />



    </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
