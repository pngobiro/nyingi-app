<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plot"
    tools:context="com.ngobiro.biroproperties.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/main_welcome_textView"
            android:textAlignment="center"
            android:background="@color/colorWhite"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Biro Properties. Find Plots on Sale " />

        <Button
            android:id="@+id/buy_plot_btn"
            android:layout_margin="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
           android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Plot" />

        <Button
            android:id="@+id/share_app_btn"
            android:background="@color/colorPrimary"
            android:layout_margin="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share App with a Friend!!!" />
        <Button
            android:id="@+id/manage_plots_btn"
            android:background="@color/colorRed"
            android:layout_margin="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Plots" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
