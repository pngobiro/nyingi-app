<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngobiro.biroproperties.activities.RentalHousePaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightpink"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_textView"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advertisement Fee Payment" />

        <TextView
            android:id="@+id/instructions_textView"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:background="@color/colorWhite"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Mobile Number and Click Pay KSHS 300 Using MPESA" />

        <EditText
            android:id="@+id/mobile_number_textView"
            android:layout_margin="20dp"
            android:hint="Enter Mobile Number"
            android:background="@color/colorWhite"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_width="338dp"
            android:layout_height="74dp" />

        <Button
            android:id="@+id/payment_button"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Using Mpesa" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
