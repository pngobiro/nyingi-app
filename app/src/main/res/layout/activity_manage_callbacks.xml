<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngobiro.biroproperties.activities.ManageCallbacksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">



        <TextView
            android:id="@+id/manage_plot_callbacks_title_textView"
            android:layout_margin="8dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Callbacks "
            />

        <Button
            android:id="@+id/view_active_callbacks_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="View Active Callbacks" />

        <Button
            android:id="@+id/view_inactive_callbacks_btn"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="View Inactive Callbacks." />




    </LinearLayout>
</android.support.constraint.ConstraintLayout>
