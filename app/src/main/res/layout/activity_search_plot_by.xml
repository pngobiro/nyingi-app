<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngobiro.biroproperties.activities.SearchPlotByActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/search_plot_by_location_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Find Plot by Location"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/search_plot_by_price_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Find Plot by Price"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plot_advanced_search_btn"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Advanced Search" />

        <Button
            android:id="@+id/search_plot_near_me"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Find Plot Near Me" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
