<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ngobiro.biroproperties.activities.AddNewRentalHouseActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@color/lightpink"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/add_new_rental_house_txtView"
            android:background="@color/colorGreen"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Rental house" />

        <EditText
            android:id="@+id/rental_house_title_editText"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:hint="Enter House Title"
            android:inputType="textPersonName" />
        <Spinner
            android:id="@+id/rental_house_category_Spinner"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/rental_house_montly_rent_textView"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="number"
            android:layout_margin="8dp"
            android:hint="Enter Monthly  Rent e.g 10000"/>
        <EditText
            android:id="@+id/rental_house_description_textView"
            android:layout_width="347dp"
            android:background="@color/colorWhite"
            android:layout_height="130dp"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:layout_margin="8dp"
            android:hint="Enter House Description"/>

        <ImageView
            android:id="@+id/rental_house_imageView"
            android:background="@color/colorLightGreen"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            app:srcCompat="@drawable/upload_rental_house_picture" />


        <Button
            android:id="@+id/new_rental_next_btn"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
